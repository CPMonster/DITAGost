<?xml version="1.0"?>
<!-- 
    ВНИМАНИЕ! 
    Правила подмены шрифтов, заданные в этом файле, действуют только 
    в том случае, если параметру сборки org.dita.pdf2.i18n.enabled 
    присвоено значение true. При непосредственном использовании 
    пакета DITA OT значение параметра org.dita.pdf2.i18n.enabled 
    задают в билд-файле. При запуске формирования выходного документа 
    из среды XML-редактора oXygen значение параметра 
    org.dita.pdf2.i18n.enabled указывают в диалоговом окне 
    Edit DITA Scenario на вкладке Parameters.     
-->
<font-mappings>
  
  <font-table>
   
    <logical-font name="">
      <physical-font char-set="default">
        <font-face>Arial Narrow, Helvetica</font-face>
      </physical-font>
      <physical-font char-set="Cyrillic">
        <font-face>Arial Narrow, Helvetica</font-face>
      </physical-font>
    </logical-font>
              
    <logical-font name="Sans">
      <physical-font char-set="default">
        <font-face>Arial Narrow, Helvetica</font-face>
      </physical-font>      
      <physical-font char-set="Cyrillic">
        <font-face>Arial Narrow, Helvetica</font-face>
      </physical-font>
      <physical-font char-set="Symbols">
        <font-face>ZapfDingbats</font-face>
      </physical-font>
      <physical-font char-set="SubmenuSymbol">
        <font-face>ZapfDingbats</font-face>
      </physical-font>
      <physical-font char-set="SymbolsSuperscript">
        <font-face>Arial</font-face>
        <baseline-shift>20%</baseline-shift>
        <override-size>smaller</override-size>
      </physical-font>
    </logical-font>

    <logical-font name="Serif">
      <physical-font char-set="default">
        <font-face>Times New Roman, Times</font-face>
      </physical-font>
      <physical-font char-set="Cyrillic">
        <font-face>Times New Roman, Times</font-face>
      </physical-font>          
      <physical-font char-set="Symbols">
        <font-face>ZapfDingbats</font-face>
      </physical-font>
      <physical-font char-set="SubmenuSymbol">
        <font-face>ZapfDingbats</font-face>
      </physical-font>
      <physical-font char-set="SymbolsSuperscript">
        <font-face>Times New Roman, Times</font-face>
        <baseline-shift>20%</baseline-shift>
        <override-size>smaller</override-size>
      </physical-font>
    </logical-font>

    <logical-font name="Monospaced">
      <physical-font char-set="default">
        <font-face>Courier New, Courier</font-face>
      </physical-font>      
      <physical-font char-set="SymbolsSuperscript">
        <font-face>Courier New, Courier</font-face>
        <baseline-shift>20%</baseline-shift>
        <override-size>smaller</override-size>
      </physical-font>
    </logical-font>
    
  </font-table>

</font-mappings>
